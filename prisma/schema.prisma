generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LawFirm {
  id         String   @id @default(uuid())
  name       String
  about      String
  website    String?
  phone      String?
  email      String   @unique
  isFeatured Boolean
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  lawyers Lawyer[]
}

model Lawyer {
  id               String   @id @default(uuid())
  name             String
  about            String
  website          String?
  phone            String?
  email            String   @unique
  isFeatured       Boolean
  yearOfExperience Int      @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  lawFirmId        String?
  LawFirm          LawFirm? @relation(fields: [lawFirmId], references: [id], onDelete: SetNull)
}
